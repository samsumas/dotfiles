#works better then old one, is bluetooth compatible
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume $(pactl info | grep -oe 'Default Sink: .*' | sed 's/.*://g') +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume $(pactl info | grep -oe 'Default Sink: .*' | sed 's/.*://g') -5%
bindsym XF86AudioMute exec pactl set-sink-mute $(pactl info | grep -oe 'Default Sink: .*' | sed 's/.*://g') toggle


